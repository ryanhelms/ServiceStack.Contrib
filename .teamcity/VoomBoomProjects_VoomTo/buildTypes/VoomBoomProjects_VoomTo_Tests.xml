    <build-runners>
      <runner id="RUNNER_23" name="Generate Build / Revision By Date" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_bitness" value="x86" />
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_script_code"><![CDATA[. .\.build\AssemblyInfo.ps1

$NewVersion = $(Get-NewVersionNumber '%system.build.number%')

Update-AllAssemblyInfoFiles $NewVersion

Write-Host "##teamcity[buildNumber '$NewVersion']"]]></param>
